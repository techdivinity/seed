        <servlet-class>servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlet.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSubCategory</servlet-name>
        <servlet-class>servlet.AddSubCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCategory</servlet-name>
        <servlet-class>servlet.AddCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Category</servlet-name>
