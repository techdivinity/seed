        <servlet-class>servlet.ShowCustInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowCustomItems</servlet-name>
        <servlet-class>servlet.ShowCustomItems</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerList</servlet-name>
        <servlet-class>servlet.CustomerList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Customer</servlet-name>
        <servlet-class>servlet.Customer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSubCategory</servlet-name>
        <url-pattern>/AddSubCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCategory</servlet-name>
        <url-pattern>/AddCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Category</servlet-name>
        <url-pattern>/user/Category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatDropPopulate</servlet-name>
        <url-pattern>/CatDropPopulate</url-pattern>
